<h1>タスク一覧</h1>

<% if @task.any? %>
  <table class = "table table-striped" >
    <thread>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タイトル</th>
        <th>タスク</th>
      </tr>
    </thread>
    <tbody>
      <% @task.each do |task| %>
    <li><%= link_to task.id, task %> : <%=task.status %> &gt; <%= task.title %> &gt; <%= task.content %></li>
  <% end %>
    </tbody>
  </table>
<div>
<%= paginate @task %>
</div>
<% end %>
<%= link_to '新規タスクの作成', new_task_path, class: "btn btn-primary" %>
